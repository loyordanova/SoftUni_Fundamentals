n = int(input())

negative_list = []
positive_list = []

for i in range(1, n + 1):
    num = int(input())

    if num < 0:
        negative_list.append(num)

    elif num >= 0:
        positive_list.append(num)

print(positive_list)
print(negative_list)
print(f'Count of positives: {len(positive_list)}')
print(f'Sum of negatives: {sum(negative_list)}')
